<h1>Invoices#index</h1>
<div style="padding: 50px">
  <span>
  <%= link_to "Home", root_path, {method: :get, class: "button", style: "float: left; cursor: pointer; vertical-align: text-bottom;color: green;"}%>
  </span>  
  <span>
  <%= link_to "Create New invoice", invoices_new_path, {method: :get, class: "button", style: "float: left; cursor: pointer; vertical-align: text-bottom;color: green;margin-left: 10px;"}%>
  </span>  

</div>


<div class="container" style="margin-top: 10px;">
  <table class="datatable cell-border" id='data'>
    <thead>
      <tr>
        <th style="text-align: center;">Invoice No</th>
        <th style="text-align: center;">Customer Name</th>
        <th style="text-align: center;">Phone</th>
        <th style="text-align: center;">Email</th>
        <th style="text-align: center;">Total Bill Amount</th>        
        <th style="text-align: center;">Discount</th>
        <th style="text-align: center;">Total Paid Amount</th>
        <th style="text-align: center;">View</th>
      </tr>

    </thead>
    <tbody class="dt-body-right stripe">
      <% @data.each do |invoice_data| %>
        <tr>
          <td style="text-align: left;"> <%= invoice_data.invoice_no %> </td>
          <td style="text-align: left;"> <%= invoice_data.full_name %> </td>
          <td style="text-align: center;"> <%= invoice_data.phone %> </td>
          <td style="text-align: center;"> <%= invoice_data.email %> </td>
          <td style="text-align: center;"> <%= invoice_data.total_bill_amount %> </td>
          <td style="text-align: center;"> <%= invoice_data.discount %> </td>
          <td style="text-align: center;"> <%= invoice_data.total_paid_amount %> </td>
          <td style="text-align: center;"> <%= link_to "View", invoices_show_path(id: invoice_data.id), {method: :get} %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>




<script type="text/javascript">
  $('#data').DataTable({
    bFilter   : true,
    bInfo     : true,
    "bSort"   : true,
    dom: 'lfrtiBp',
    buttons: ['excel'],
    "paging"  : true
 
  });
</script>